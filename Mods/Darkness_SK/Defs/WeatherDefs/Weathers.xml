<WeatherDefs>

  <WeatherDef>
    <defname>Whiteout</defname>
    <label>Whiteout</label>
    <description>As the whiteout is taking place visibilty is severely reduced, because of the snow, and so the use of ranged weapons is a very poor choice. </description>
    <temperatureRange>
      <min>0</min>
      <max>7</max>
    </temperatureRange>
    <snowRate>1.1</snowRate>
    <windSpeedFactor>1.0</windSpeedFactor>
