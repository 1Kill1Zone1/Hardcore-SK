  <ThingDef Name="BenchBase" ParentName="BuildingBase" Abstract="True">
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
  </ThingDef>

		<ThingDef ParentName="BenchBase">
		<defName>NanoStorage</defName>
		<label>Nano Storage</label>
		<description>This building provides nano storage capabilities.</description>
		<thingClass>NanoStorage.Building_NanoStorage</thingClass>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Building/NanoStorage/NanoStorage</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Waist</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<statBases>
			<WorkToMake>8500</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1.0</Flammability>
			<Beauty>0</Beauty>
		</statBases>
		<castEdgeShadows>false</castEdgeShadows>
		<size>(1,1)</size>
		<costList>
			<Parts_Steel>12</Parts_Steel>
      			<SyntheticMaterials>8</SyntheticMaterials>
			<Spare_Parts>6</Spare_Parts>
			<Microchips>2</Microchips>
		</costList>
		<killedLeavings>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</killedLeavings>
		<rotatable>true</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>Hitech</designationCategory>
		<surfaceType>Item</surfaceType>
		<tickerType>Normal</tickerType>
		<building>
			<preventDeterioration>true</preventDeterioration>
			<fixedStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Resources</li>
						<li>Items</li>
						<li>Weapons</li>
						<li>Apparel</li>
						<li>BodyParts</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Resources</li>
						<li>Items</li>
						<li>Weapons</li>
						<li>Apparel</li>
						<li>BodyParts</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<researchPrerequisite>ResearchNanoStorage</researchPrerequisite>
	</ThingDef>

</ThingDefs>
