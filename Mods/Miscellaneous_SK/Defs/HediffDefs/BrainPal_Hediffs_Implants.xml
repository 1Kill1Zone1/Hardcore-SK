<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Added body parts -->

  <HediffDef Name="ImplantBase" Abstract="True">
    <hediffClass>Hediff_Implant</hediffClass>
    <defaultLabelColor>(0.65, 0.3, 0.9)</defaultLabelColor>
    <isBad>false</isBad>
  </HediffDef>

  <HediffDef ParentName="ImplantBase">
    <defName>BionicTacticalImplant</defName>
    <label>Bionic BrainPal</label>
      <spawnThingOnRemoved>BionicTacticalImplant</spawnThingOnRemoved>
    <addedPartProps>
      <isBionic>true</isBionic>
      <isSolid>true</isSolid>
      <partEfficiency>1.15</partEfficiency>
    </addedPartProps>
    <stages>
      <li>
		<capMods>
			<li>
				<capacity>Consciousness</capacity>
				<offset>0.11</offset>
			</li>
			<li>
				<capacity>Sight</capacity>
				<offset>0.11</offset>
			</li>
			<li>
				<capacity>Manipulation</capacity>
				<offset>0.13</offset>
			</li>
		</capMods>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="ImplantBase">
    <defName>ElectronicTacticalImplant</defName>
    <label>Electronic BrainPal</label>
    <spawnThingOnRemoved>ElectronicTacticalImplant</spawnThingOnRemoved>
    <addedPartProps>
      <isBionic>true</isBionic>
      <isSolid>true</isSolid>
      <partEfficiency>1.0</partEfficiency>
    </addedPartProps>
    <stages>
      <li>
		<capMods>
			<li>
				<capacity>Consciousness</capacity>
				<offset>0.07</offset>
			</li>
			<li>
				<capacity>Sight</capacity>
				<offset>0.07</offset>
			</li>
		</capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>
