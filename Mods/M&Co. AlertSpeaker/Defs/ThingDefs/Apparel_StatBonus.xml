<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="StatBonus" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>false</selectable>
    <UseHitPoints>false</UseHitPoints>
    <destroyOnDrop>true</destroyOnDrop>
    <menuHidden>true</menuHidden>
  </ThingDef>

  <ThingDef ParentName="StatBonus">
    <defName>SmallAdrenalineBoostStatBonus</defName>
    <label>Small adrenaline boost</label>
    <description>I heard the alarm. Let's see what happens.</description>
    <graphicData>
      <texPath>Effects/SmallAdrenalineBoost</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedStatOffsets>
      <MoveSpeed>0.5</MoveSpeed>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Arms</li>
      </bodyPartGroups>
      <layers>
        <li>Accessory</li>
      </layers>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="StatBonus">
    <defName>MediumAdrenalineBoostStatBonus</defName>
    <label>Medium adrenaline boost</label>
    <description>The colony is under attack, let's defend our lives! All to the combat posts!</description>
    <graphicData>
      <texPath>Effects/MediumAdrenalineBoost</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedStatOffsets>
      <MoveSpeed>1</MoveSpeed>
      <AimingDelayFactor>-0.10</AimingDelayFactor>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Arms</li>
      </bodyPartGroups>
      <layers>
        <li>Accessory</li>
      </layers>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="StatBonus">
    <defName>SmallStressStatMalus</defName>
    <label>Small stress malus</label>
    <description>The colony is under pressure for too long! I'm so tired and I cannot bear this anymore.</description>
    <graphicData>
      <texPath>Effects/SmallStress</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedStatOffsets>
      <WorkSpeedGlobal>-0.10</WorkSpeedGlobal>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Arms</li>
      </bodyPartGroups>
      <layers>
        <li>Accessory</li>
      </layers>
    </apparel>
  </ThingDef>

</ThingDefs>