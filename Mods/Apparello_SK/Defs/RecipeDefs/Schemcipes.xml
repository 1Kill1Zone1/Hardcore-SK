<RecipeDefs>

<!-- AI -->
  <RecipeDef>
    <defName>SchemakeAI</defName>
    <label>Draft schematic: AI core</label>
    <description>Studies AI personality core for potential uses. AI core is not consumed in the process. Bear in mind it's a lengthy process.</description>
    <jobString>Drafting</jobString>
    <workAmount>4000</workAmount>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>AIPersonaCore</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>SchemKit</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <AISchem>1</AISchem>
      <AIPersonaCore>1</AIPersonaCore>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
          <li>AIPersonaCore</li>
          <li>SchemKit</li>
      </thingDefs>
    </fixedIngredientFilter>
	<defaultIngredientFilter>
	 <thingDefs>
          <li>AIPersonaCore</li>
          <li>SchemKit</li>
	 </thingDefs>
	</defaultIngredientFilter>
	<skillRequirements>
	 <li>
	  <skill>Research</skill>
	  <minLevel>15</minLevel>
	 </li>
	</skillRequirements>
	<workSkill>Research</workSkill>
  </RecipeDef>


