<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <IncidentDef>
    <defName>VolcanicWinter</defName>
    <workerClass>IncidentWorker_MakeMapCondition</workerClass>
    <mapCondition>VolcanicWinter</mapCondition>
    <letterLabel>Volcanic winter</letterLabel>
    <letterText>A distant supervolcano has erupted and begun spewing millions of cubic kilometers of ash into the atmosphere.\n\nAsh in the atmosphere will obscure the sun. Temperatures will drop and plants will suffer from lack of sunlight. It could pass in a few weeks or it might last many months.</letterText>
    <letterType>BadNonUrgent</letterType>
    <chance>0.11</chance>
    <earliestDay>60</earliestDay>
    <minRefireDays>280</minRefireDays>
    <durationDays>
      <min>25</min>
      <max>200</max>
    </durationDays>
  </IncidentDef>

