<?xml version="1.0" encoding="utf-8" ?>

<ThingDefs>

  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <tickerType>Normal</tickerType>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>3.0</multiplier>
      </li>
      <li>
        <damageDef>Bullet</damageDef>
        <multiplier>0.3</multiplier>
      </li>
      <li>
        <damageDef>Fragment</damageDef>
        <multiplier>0.2</multiplier>
      </li>
      <li>
        <damageDef>ArmorPiercing</damageDef>
        <multiplier>2.5</multiplier>
      </li>
      <li>
        <damageDef>LaserBurn</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>AntiMateriel</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>Optic</damageDef>
        <multiplier>1.5</multiplier>
      </li>
      <li>
        <damageDef>Plasma</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>Microwave</damageDef>
        <multiplier>1.5</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>

  <ThingDef Name="BenchBase" ParentName="BuildingBase" Abstract="True">
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
  </ThingDef>
  
  <ThingDef ParentName="BenchBase">
    <DefName>UpgradingStation</DefName>
    <label>advanced bionics workbench</label>
    <ThingClass>Building_WorkTable</ThingClass>
    <Description>A workbench equipped for production of prosthetics and bionics.</Description>
    <graphicData>
      <texPath>Things/Building/Production/TableAdvancedProsthetics</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,1)</drawSize>
    </graphicData>
	<stuffCategories>
	<li>MetallicParts</li>
	</stuffCategories>
	<costStuffCount>55</costStuffCount>
    <CostList>
			<SyntheticMaterials>25</SyntheticMaterials>
			<Electronics>8</Electronics>
			<Spare_Parts>8</Spare_Parts>
			<Mechanism>6</Mechanism>
    </CostList>
    <AltitudeLayer>Waist</AltitudeLayer>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Cleanliness>-1</Cleanliness>
    </statBases>
    <Size>(3,1)</Size>
    <comps>
      <li>
        <compClass>CompPowerTrader</compClass>
        <startElectricalFires>true</startElectricalFires>
        <basePowerConsumption>850</basePowerConsumption>
        <soundPowerOn>PowerOnSmall</soundPowerOn>
        <soundPowerOff>PowerOffSmall</soundPowerOff>
      </li>
	  <li>
        <compClass>CompAffectedByFacilities</compClass>
        <linkableFacilities>
			<li>Stool</li>
          <li>Small_ToolCabinet</li>
        </linkableFacilities>
      </li>
            <li Class="CommunityCoreLibrary.CompProperties_LowIdleDraw">
                <compClass>CommunityCoreLibrary.CompPowerLowIdleDraw</compClass>
                <idlePowerFactor>0.1</idlePowerFactor>
            </li>
    </comps>
    <DesignationCategory>Hitech</DesignationCategory>
    <Passability>PassThroughOnly</Passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>True</hasInteractionCell>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <surfaceType>Item</surfaceType>
    <recipes>
	<li>CreateAdvancedBionicArm</li>
	<li>CreateAdvancedBionicLeg</li>
	<li>CreateAdvancedBionicHand</li>
	<li>CreateAdvancedBionicFoot</li>
	<li>CreateAdvancedBionicSpine</li>
	<li>CreateAdvancedBionicEye</li>
	<li>CreateAdvancedBionicEar</li>
	<li>CreateAdvancedBionicJaw</li>
	<li>CreateAdvancedPowerArm</li>
	<li>CreateExoskeletonSuit</li>
	<li>CreatePowerClaw</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
	<placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
    <researchPrerequisite>AdvancedBionics</researchPrerequisite>
  </ThingDef>
  
</ThingDefs>