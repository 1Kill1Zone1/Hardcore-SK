<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <HediffDef Name="DiseaseBase" Abstract="True">
    <hediffClass>Hediff_Staged</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
  </HediffDef>
  
  
  <HediffDef ParentName="DiseaseBase">
    <defName>BadMigraine</defName>
    <label>Bad migraine</label>
    <comps>
      <li>
        <compClass>HediffComp_Disappears</compClass>
        <disappearsAfterTicks>100000</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
	  <painOffset>0.4</painOffset>
        <capMods>
		<li>
            <capacity>Sight</capacity>
            <setMax>0.5</setMax>
          </li>
		  <li>
            <capacity>Talking</capacity>
            <setMax>0.5</setMax>
          </li>
		  <li>
            <capacity>Hearing</capacity>
            <setMax>0.5</setMax>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.5</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.5</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  
  <HediffDef ParentName="DiseaseBase">
    <defName>BodyRestart</defName>
    <label>Physical reset</label>
    <comps>
      <li>
        <compClass>HediffComp_Disappears</compClass>
        <disappearsAfterTicks>200000</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
		<painOffset>0.6</painOffset>
        <vomitMtbDays>1</vomitMtbDays>
        <capMods>
		<li>
            <capacity>Consciousness</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>Hearing</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <setMax>0.3</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.3</setMax>
          </li>
          <li>
            <capacity>Talking</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>Eating</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>Breathing</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>BloodFiltration</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>BloodPumping</capacity>
            <setMax>0.3</setMax>
          </li>
		  <li>
            <capacity>Metabolism</capacity>
            <setMax>0.3</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
   <HediffDef ParentName="DiseaseBase">
    <defName>Rewire</defName>
    <label>Altering sickness</label>
    <comps>
      <li>
        <compClass>HediffComp_Disappears</compClass>
        <disappearsAfterTicks>200000</disappearsAfterTicks>
      </li>
    </comps>
    <stages>
      <li>
	  
        <vomitMtbDays>0.5</vomitMtbDays>
        <capMods>
		<li>
            <capacity>Consciousness</capacity>
            <setMax>0.6</setMax>
          </li>
		  <li>
            <capacity>Moving</capacity>
            <setMax>0.6</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.6</setMax>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <setMax>0.6</setMax>
          </li>
		  
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  
 <HediffDef ParentName="DiseaseBase">
    <defName>Braindeath</defName>
    <label>brain death</label>
    <severityPerDay>0.5</severityPerDay>
    <stages>
      <li>
        <minSeverity>0.1</minSeverity>
        <label>minor</label>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.2</minSeverity>
        <label>major</label>
        <painOffset>0.35</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.3</minSeverity>
        <label>extreme</label>
        <painOffset>0.6</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.4</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.4</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.4</minSeverity>
        <label>extreme</label>
        <lifeThreatening>true</lifeThreatening>
        <painOffset>0.9</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.5</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>extreme</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  
  
  
  

  

 



</Defs>