<ThingDef Class="ClutterModule.ItemThingDefs">
		<defName>TPills</defName>
		<label>XXX  Pills</label>
		<thingClass>ClutterModule.ItemThingClass</thingClass>
		<category>Item</category>
		<graphicData>
		 <texPath>Clutter/Various/SeepingPills</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>Transparent</shaderType>
		</graphicData>
		<AltitudeLayer>Waist</AltitudeLayer>
		<useHitPoints>true</useHitPoints>
		 <DrawGUIOverlay>true</DrawGUIOverlay>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>
		<stackLimit>75</stackLimit>
		<alwaysHaulable>true</alwaysHaulable>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
		<tradeability>Sellable</tradeability>
		<destroyOnDrop>false</destroyOnDrop>
		<menuHidden>false</menuHidden>
		<comps>
			<li>
				<compClass>CompForbiddable</compClass>
			</li>
		</comps>
		<selectable>true</selectable>
		<Description>Sleeping pills, a miracle of modern science, and almost safe enough to use.</Description>
		
		<HediffToAdd>Alcohol</HediffToAdd>
		<BodyPartToHediff>Head</BodyPartToHediff>
		<HediffSeverityStage>0.3</HediffSeverityStage>
		
		
	</ThingDef>

