<?xml version="1.0" encoding="utf-8" ?>

<Buildings>
 <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>3.0</multiplier>
      </li>
      <li>
        <damageDef>Bullet</damageDef>
        <multiplier>0.3</multiplier>
      </li>
      <li>
        <damageDef>Fragment</damageDef>
        <multiplier>0.2</multiplier>
      </li>
      <li>
        <damageDef>ArmorPiercing</damageDef>
        <multiplier>2.5</multiplier>
      </li>
      <li>
        <damageDef>LaserBurn</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>AntiMateriel</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>Optic</damageDef>
        <multiplier>1.5</multiplier>
      </li>
      <li>
        <damageDef>Plasma</damageDef>
        <multiplier>2.0</multiplier>
      </li>
      <li>
        <damageDef>Microwave</damageDef>
        <multiplier>1.5</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>
  
  <ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <DesignationCategory>Furniture</DesignationCategory>
    <minifiedDef>MinifiedFurniture</minifiedDef>
  </ThingDef>
  
  <ThingDef Name="HighQualityFurnitureBase" ParentName="BuildingBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li>
        <compClass>CompArt</compClass>
        <nameMaker>NamerFurniture</nameMaker>
        <descriptionMaker>ArtFurniture</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <DesignationCategory>Furniture</DesignationCategory>
    <minifiedDef>MinifiedFurniture</minifiedDef>
  </ThingDef>

<!--================ Decoration ================-->

<ThingDef ParentName="HighQualityFurnitureBase">
		<defName>ClutterCogCrate</defName>
		<label>Cog crate</label>
		<thingClass>ClutterModule.FurnitureSearch</thingClass>
		<category>Building</category>
		<graphicData>
		 <texPath>Clutter/Decoration/CogCrate</texPath>
		<shaderType>CutoutComplex</shaderType>
		<graphicClass>Graphic_Single</graphicClass>
		 <drawSize>(1,1)</drawSize>
		</graphicData>
		<AltitudeLayer>Waist</AltitudeLayer>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToMake>500</WorkToMake>
			<Flammability>1.0</Flammability>
			<Beauty>7</Beauty>
      			<Comfort>0.1</Comfort>
		</statBases>
		<PathCost>60</PathCost>
		<Passability>PassThroughOnly</Passability>
		<tickerType>Normal</tickerType>
		<fillPercent>0.5</fillPercent>
		<Size>1,1</Size>
		<Description>A crate with a cog on it. An item could be stashed inside of it.</Description>
		 <stuffCategories>
		<li>Metallic</li>
		<li>Woody</li>
		<li>Precious</li>
    		</stuffCategories>
		<costStuffCount>35</costStuffCount>
		<costList>
			<SteelBar>5</SteelBar>
			<Spare_Parts>1</Spare_Parts>
		</costList>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<designationCategory>Accessories</designationCategory>
		<researchPrerequisite>ComfyTech</researchPrerequisite>
		</ThingDef>

