  <!--============================== Beds ==============================-->
  
  <ThingDef ParentName="FurnitureBase">
    <defName>GuestBed</defName>
    <label>guest bed</label>
    <Description>A place for guests to sleep during their stay.</Description>
    <ThingClass>Hospitality.Building_GuestBed</ThingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Bed/BedGuest</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,4)</drawSize>
    </graphicData>
    <AltitudeLayer>Waist</AltitudeLayer>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <Flammability>20.0</Flammability>
      <Beauty>8</Beauty>
      <WorkToMake>4500</WorkToMake>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.7</Comfort>
      <ImmunityGainSpeedFactor>1.1</ImmunityGainSpeedFactor>
    </statBases>
    <Size>(1,2)</Size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
			<costList>
			<Cloth>35</Cloth>
			<Spare_Parts>2</Spare_Parts>
		</costList>
    <building>
      <Bed_ShowSleeperBody>False</Bed_ShowSleeperBody>
      <Bed_HealTickInterval>2000</Bed_HealTickInterval>
    </building>
    <comps>
      <li>
        <compClass>CompAffectedByFacilities</compClass>
      </li>
    </comps>
    <fillPercent>0.4</fillPercent>
    <PathCost>60</PathCost>
    <StaticSunShadowHeight>0.15</StaticSunShadowHeight>
    <CastEdgeShadows>True</CastEdgeShadows>
    <designationHotKey>G</designationHotKey>
    <Passability>PassThroughOnly</Passability>
    <DrawGUIOverlay>True</DrawGUIOverlay>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
  </ThingDef>


