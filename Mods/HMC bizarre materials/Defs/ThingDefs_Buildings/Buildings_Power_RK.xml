<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="PowerFueled">
		<defName>SarcasmiumGenerator</defName>
		<label>sarcasmium generator</label>
		<thingClass>SK.Building_SteamGenerator</thingClass>
		<graphicData>
			<texPath>Things/Building/Power/SteamGenerator/heatgenerator</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
			<shadowData>
				<volume>(1.8, 0.8, 1.8)</volume>
				<offset>(0,0,0)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<MaxHitPoints>475</MaxHitPoints>
			<WorkToBuild>7000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<description>The basic Steam Generator that produces electricity. Can be fueled with Ethanol Fuel, Charcoal, Kindling and wooden stuff.
Power output: around 5500 W.</description>
		<size>(2,2)</size>
		<stuffCategories>
			<li>RuggedMetallic</li>
		</stuffCategories>
		<costStuffCount>220</costStuffCount>
		<costList>
			<Sarcasmium>110</Sarcasmium>
			<ComponentIndustrial>25</ComponentIndustrial>
			<ReinforcedConcrete>20</ReinforcedConcrete>
			<Mechanism>6</Mechanism>
		</costList>
		<comps>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Breakdownable"/>
			<li Class="CompProperties_Power">
				<compClass>SK.CompPowerPlantFueled</compClass>
				<basePowerConsumption>-5500</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>5</glowRadius>
				<glowColor>(172,193,151,0)</glowColor>
			</li>
			<li Class="SK.CompProperties_HeatPusherAdvanced">
				<compClass>SK.CompHeatPusherAdvanced</compClass>
				<heatPerSecond>32</heatPerSecond>
				<heatPushMaxTemperature>160</heatPushMaxTemperature>
			</li>
			<li Class="SK.CompFueled_Properties">
				<operatingTemp>2050</operatingTemp>
				<drawfirefuel>false</drawfirefuel>
<!-- 				<smokeDrawOffset>(0,0,0.1)</smokeDrawOffset>
				<smokesize>1.7</smokesize>
				<smokespeeddelay>20</smokespeeddelay> -->
				<fuelCapacity>100</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>Sarcasmium</li>
					</thingDefs>
				</fuelFilter>
			</li>
		</comps>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<designationCategory>Power</designationCategory>
		<researchPrerequisites>
			<li>SK_ConvectionalIII</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>13</constructionSkillPrerequisite>
		<modExtensions>
			<li Class="SK.Events.AccidentalExplosionExtension">
			</li>
		</modExtensions>
	</ThingDef>

</Defs>