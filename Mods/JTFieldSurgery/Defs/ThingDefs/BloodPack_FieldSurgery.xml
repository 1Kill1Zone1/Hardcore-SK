<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="OrganicProductBase">
	<defName>JTFieldSurgeryBloodPack</defName>
	<thingClass>ThingWithComps</thingClass>
	<label>blood pack</label>
    <category>Item</category>
	<description>Universal donor blood for treating blood loss. Intravenal intake will require several hours. Must be refrigerated. Destroyed by freezing.</description>
	<graphicData>
		<texPath>JT/BloodPack</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	<statBases>
		<MarketValue>210</MarketValue>
		<MaxHitPoints>30</MaxHitPoints>
		<Flammability>1.0</Flammability>
		<DeteriorationRate>30</DeteriorationRate>
		<Mass>0.1</Mass>
		</statBases>
	<tickerType>Rare</tickerType>
	<ingestible>
		<foodType>Processed</foodType>
		<preferability>DesperateOnly</preferability>
		<tasteThought>JTFieldSurgeryDrankBlood</tasteThought>
		<nutrition>0.45</nutrition>
		<ingestEffect>EatMeat</ingestEffect>
		<ingestSound>RawMeat_Eat</ingestSound>
		</ingestible>
	<thingCategories>
		<li>JTFieldSurgeryBloodPackCategory</li>
		</thingCategories>
	<comps>
		<li Class="CompProperties_FoodPoisoningChance" />
		<li Class="CompProperties_Rottable">
			<compClass>CompRottable</compClass>
			<daysToRotStart>15</daysToRotStart>
			<rotDestroys>true</rotDestroys>
			</li>
		<li Class="JTFieldSurgery.CompProperties_DeteriorateWhenFrozen">
			<daysToDeteriorateCompletely>3</daysToDeteriorateCompletely>
			<freezeDamage>7</freezeDamage>
			<thawDamage>10</thawDamage>
			</li>
	</comps>
</ThingDef>

