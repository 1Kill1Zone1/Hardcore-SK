  <!-- Terminator -->
  <ThingDef ParentName="BaseSkynet">
    <defName>Skynet_Terminator</defName>
    <label>Terminator</label>
    <description>The Terminator is an infiltration unit, part man - part machine. Underneath it's a hyperalloy combat chassis, microprocessor-controlled, fully armored, very tough. But outside it's living human tissue. Flesh, skin, hair, blood, grown for the cyborgs. The endoskeleton is actuated by a powerful network of hydraulic servomechanisms, making Terminators superhumanly strong.</description>
    <statBases>
      <MoveSpeed>4.8</MoveSpeed>
      <ArmorRating_Blunt>0.24</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.26</ArmorRating_Sharp>
      <ArmorRating_Electric>5</ArmorRating_Electric>
      <Flammability>0</Flammability>
      <ComfyTemperatureMin>-270</ComfyTemperatureMin>
      <ComfyTemperatureMax>880</ComfyTemperatureMax>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTicks>100</defaultCooldownTicks>
        <meleeDamageBaseAmount>24</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTicks>100</defaultCooldownTicks>
        <meleeDamageBaseAmount>24</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
      </li>
    </verbs>
    <race>
      <intelligence>ToolUser</intelligence>
      <mechanoid>true</mechanoid>
      <thinkTree>Mechanoid</thinkTree>
      <body>Scyther</body>
      <baseBodySize>1.0</baseBodySize>
      <baseHealthScale>3.5</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Ter_Angry</soundWounded>
          <soundDeath>Ter_Call</soundDeath>
          <soundCall>Ter_Sound</soundCall>
          <soundAngry>Ter_Call</soundAngry>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>
        <min>1000</min>
        <max>2000</max>
      </soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
    </race>
    <recipes>
