      <li>ShutDownMechanoid</li>
    </recipes>
    <butcherProducts>
<TitaniumBar>10</TitaniumBar>
<DepletedUranium>11</DepletedUranium>
<CarbonAlloy>11</CarbonAlloy>
<Skynet_Cloak>1</Skynet_Cloak>
    </butcherProducts>
  </ThingDef>

