<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Random social interactions -->
  
  <InteractionDef>
    <defName>InspirationalTalk</defName>
    <label>Inspirational Talk</label>
    <workerClass>Nandonalt_ColonyLeadership.InteractionWorker_LeaderOnly</workerClass>
    <symbol>Things/Mote/SpeechSymbols/DeepTalk</symbol>
    <initiatorThought>InspiratedLI</initiatorThought>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>10</initiatorXpGainAmount>
    <recipientThought>InspiratedL</recipientThought>
     <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->Inspired [RECIPIENT_nameIndef].</li>
      </rulesStrings>
    </logRulesInitiator>
    <logRulesRecipient>
      <rulesStrings>
        <li>r_logentry->Was inspired by [RECIPIENT_nameIndef].</li>
      </rulesStrings>
    </logRulesRecipient>
  </InteractionDef>  
  
</Defs>
