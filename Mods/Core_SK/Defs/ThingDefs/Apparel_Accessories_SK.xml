<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>3</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <techLevel>Midworld</techLevel>
    <thingCategories>
      <li>Apparelloeyehats</li>
    </thingCategories>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>


  <ThingDef Name="ApparelMakeableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
        <recipeUsers>
        <li>TableTailor</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>


  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Marine_TacticalMask</defName>
    <label>Marine Tactical Mask</label>
    <description>A marine special forces black tactical mask. Also known as balaclava.</description>
    <graphicData>
      <texPath>Marines/Accessories/TacticalMask/Balaklava</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1200</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.02</ArmorRating_Sharp>
      <Insulation_Cold>-12</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <ComfyTemperatureMin>-25</ComfyTemperatureMin>
			<GiftImpact>0.04</GiftImpact>
			<SocialImpact>0.03</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <worngraphicPath>Marines/Accessories/TacticalMask/Balaklava</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>1</commonality>
      <tags>
        <li>Military</li>
	<li>BrotherhoodLight</li>
	<li>SectarianLight</li>
	<li>SyndicateLight</li>
	<li>OrionLight</li>
	<li>RenegadesLight</li>
	<li>BanditsMedium</li>
	<li>RenegadesMedium</li>
	<li>BrotherhoodScout</li>
	<li>SectarianScout</li>
	<li>SyndicateScout</li>
	<li>OrionScout</li>
	<li>PredatorsScout</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>4</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.9,0.9,0.9,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>


