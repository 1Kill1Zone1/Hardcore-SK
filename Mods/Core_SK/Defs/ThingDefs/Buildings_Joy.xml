  	<ThingDef ParentName="BuildingBase">
		<defName>GlassMonitorLarge</defName>
		<Label>Flatscreen TV</Label>
		<Description>A large, flat TV screen. Colonists can watch old movies in high definition. Requires power.</Description>
    		<thingClass>Building</thingClass>
		<graphicData>
			<texPath>Things/Building/GlassworkTV</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,1)</drawSize>
		</graphicData>
		<AltitudeLayer>Waist</AltitudeLayer>
		<rotatable>true</rotatable>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>1200</MarketValue>
			<WorkToMake>7000</WorkToMake>
			<Flammability>20.0</Flammability>
			<Beauty>25</Beauty>
		</statBases>
		<Size>(2,1)</Size>
    <costList>
			<Glass>20</Glass>
			<Rubber>50</Rubber>
			<Plastic>15</Plastic>
			<Electronics>5</Electronics>
			<Spare_Parts>3</Spare_Parts>
    </costList>
		<DesignationCategory>Joy</DesignationCategory>
		<pathCost>70</pathCost>
		<Passability>PassThroughOnly</Passability>
		<comps>
			<li>
				<compClass>CompPowerTrader</compClass>
				<startElectricalFires>true</startElectricalFires>
				<basePowerConsumption>250</basePowerConsumption>
				<soundPowerOn>PowerOnSmall</soundPowerOn>
				<soundPowerOff>PowerOffSmall</soundPowerOff>
			</li>
			<li>
				<compClass>CompGlower</compClass>
				<glowRadius>3</glowRadius>
				<glowColor>(195,225,255,0)</glowColor>
			</li>
            <li Class="CommunityCoreLibrary.CompProperties_LowIdleDraw">
                <compClass>CommunityCoreLibrary.CompPowerLowIdleDraw</compClass>
                <idlePowerFactor>0.1</idlePowerFactor>
            </li>
		</comps>
		<researchPrerequisite>JoyIV</researchPrerequisite>
	</ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>HorseshoesPin</defName>
    <label>Horseshoe Pit</label>
    <description>A simple ancient game played with a few horseshoes and a large pin in the ground. Players toss horseshoes from a distance and attempt to get them to land close to or around the pin. It is relaxing, and even trains hand-eye coordination.</description>
    <graphicData>
      <texPath>Things/Building/Joy/HorseshoesPin</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Waist</altitudeLayer>
    <rotatable>false</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToMake>1150</WorkToMake>
      <Flammability>20.0</Flammability>
    </statBases>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <stuffCategories>
	<li>Metallic</li>
	<li>Woody</li>
	<li>Precious</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
		<CostList>
			<Spare_Parts>3</Spare_Parts>
		</CostList>
    <pathCost>10</pathCost>
    <designationCategory>Joy</designationCategory>
    <designationHotKey>H</designationHotKey>
	<researchPrerequisite>JoyI</researchPrerequisite>
  </ThingDef>
  
  
