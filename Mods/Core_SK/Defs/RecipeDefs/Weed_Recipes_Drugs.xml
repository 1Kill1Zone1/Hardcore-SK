<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <RecipeDef>
    <defName>Makeweedcig</defName>
    <label>Roll weed cigarette</label>
    <description>Make your Weed into something useful like Cigarettes.</description>
    <jobString>Making Cigarette.</jobString>
    <workSpeedStat>BrewingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Brewing</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>420</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Weed</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Weed</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <WeedCig>1</WeedCig>
    </products>
    <workSkill>Crafting</workSkill>
  </RecipeDef>


