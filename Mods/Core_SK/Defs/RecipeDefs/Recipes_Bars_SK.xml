	<RecipeDef>
		<defName>MakeCarbonAlloy_Electric</defName>
		<label>make carbon alloy</label>
		<description>Makes carbon alloy from carbon and steelbar. Quite fast.</description>
		<jobString>Making carbon alloy.</jobString>
		<workAmount>1400</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>SteelBar</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Carbon</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>SteelBar</li>
				<li>Carbon</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<CarbonAlloy>10</CarbonAlloy>
		</products>
		<workSkill>Crafting</workSkill>
	</RecipeDef>


