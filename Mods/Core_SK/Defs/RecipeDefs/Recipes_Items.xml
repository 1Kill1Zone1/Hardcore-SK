<RecipeDefs>

  <RecipeDef>
    <defName>MakeMiningHelmet</defName>
    <label>Make Mining Helmet</label>
    <description>Crafts a mining helmet. Has a built in light and increases mining speed. Produces 1.</description>
    <jobString>Making a Mining Helmet.</jobString>
    <workAmount>9000</workAmount>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Interact_Repair</soundWorking>
    <recipeUsers>
      <li>TableSmithing</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
			<categories>
				<li>Metallic</li>
            </categories>
        </filter>
        <count>80</count>
      </li>
      <li>
        <filter>
			<categories>
				<li>Textiles</li>
            </categories>
        </filter>
        <count>40</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
					<categories>
						<li>SLDBar</li>
						<li>USLDBar</li>
						<li>BTextiles</li>
						<li>HTextiles</li>
                    </categories>
    </fixedIngredientFilter>
    <products>
      <MiningHelmet>1</MiningHelmet>    
  </products>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>8</minLevel>
			</li>
		</skillRequirements>
  <workSkill>Crafting</workSkill>
    	<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<unfinishedThingDef>UnfinishedMetallicApparel</unfinishedThingDef>
  </RecipeDef>
  
  
