<Defs>

	<ThingDef ParentName="ApparelIndustrialBase">
		<defName>Apparel_GasMask</defName>
		<label>gas mask</label>
		<description>Sealed rubber mask with a filter attached. Will protect against smoke inhalation and airborne toxins</description>
		<graphicData>
			<texPath>Things/Apparel/GasMask/GasMask</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Industrial</techLevel>
		<generateAllowChance>0.2</generateAllowChance>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<Chemfuel>10</Chemfuel>
		</costList>
		<statBases>
			<WorkToMake>8000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>0.4</Mass>
			<Bulk>2</Bulk>
			<WornBulk>1</WornBulk>
			<EquipDelay>1.5</EquipDelay>
			<StuffEffectMultiplierArmor>0.11</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>0</ArmorRating_Sharp>
			<ArmorRating_Blunt>0</ArmorRating_Blunt>
			<ArmorRating_Heat>0</ArmorRating_Heat>
		</statBases>
		<equippedStatOffsets>
			<ToxicSensitivity>-0.5</ToxicSensitivity>
			<SmokeSensitivity>-1</SmokeSensitivity>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Eyes</li>
				<li>Teeth</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/GasMask/GasMask</wornGraphicPath>
			<layers>
				<li>StrappedHead</li>
			</layers>
			<tags>
				<li>Military</li>
				<li>BrotherhoodLight</li>
				<li>BrotherhoodMedium</li>
				<li>SectarianLight</li>
				<li>OrionLight</li>
				<li>RenegadesMedium</li>
				<li>SyndicateLight</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<hatRenderedFrontOfFace>false</hatRenderedFrontOfFace>
		</apparel>
		<thingCategories>
			<li>SetGasMask</li>
		</thingCategories>
		<modExtensions>
			<li Class="CombatExtended.ApparelHediffExtension">
				<hediff>WearingGasMask</hediff>
			</li>
		</modExtensions>
	</ThingDef>

