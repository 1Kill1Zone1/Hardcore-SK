<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
  
  <RecipeDef Name="AmmoRecipePistol" Abstract="true">
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>5000</workAmount>
    <workSkill>Crafting</workSkill>
    <targetCountAdjustment>100</targetCountAdjustment>
    <recipeUsers>
      <!-- Need an empty list here or the ammo injector will throw a null ref exception -->
    </recipeUsers>
  </RecipeDef>
  
  
  <RecipeDef ParentName="AmmoRecipePistol">
    <defName>MakeAmmo_50AE_AP</defName>
    <label>make .50 inch AE cartridge (AP) x80</label>
    <description>Craft 80 .50 inch Action Express (AP) cartridges.</description>
    <jobString>Making .50 inch AE (AP) cartridges.</jobString>
    <targetCountAdjustment>80</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Metallic</li>
          </categories>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>DepletedUranium</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Powder</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>SLDBar</li>
        <li>USLDBar</li>
      </categories>
      <thingDefs>
        <li>DepletedUranium</li>
        <li>Powder</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_50AE_AP>80</Ammo_50AE_AP>
    </products>
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>6</minLevel>
      </li>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
  </RecipeDef>
  
