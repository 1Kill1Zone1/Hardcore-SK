  <RecipeDef ParentName="AmmoRecipeBase">
    <defName>MakeAmmo_BlasterBolt</defName>
    <label>make Blaster charged bolt cartridge x80</label>
    <description>Craft 80 Blaster charged bolt cartridges.</description>
    <jobString>Making Blaster charged bolt cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>SLDBar</li>
          </categories>
        </filter>
        <count>16</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>USLDBar</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MagneticMaterial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>BiosyntheticMaterial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>SLDBar</li>
        <li>USLDBar</li>
      </categories>
      <thingDefs>
        <li>BiosyntheticMaterial</li>
        <li>MagneticMaterial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_BlasterBolt>80</Ammo_BlasterBolt>
    </products>
  </RecipeDef>
  
