<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeOcean.ConfigurationDef>

		<defName>TideConf</defName>
<!--  Activate tidal events? "true" = Activate "false" = Deactivate   -->
		<ActivationTideEvent>true</ActivationTideEvent>

<!--  Days before first tide: 2  Duration of a tide cycle: 40  Duration of ebb time: 4  -->
		<DaysBeforeFirstTide>2</DaysBeforeFirstTide>
		<DaysDurationTide>40</DaysDurationTide>	
		<DaysDurationEbb>4</DaysDurationEbb>	
		<TideHourOfDayOffset>6</TideHourOfDayOffset>

<!--  The number of resources spawned on the beach during ebb time -->
		<SpawItemNum>20</SpawItemNum>

<!--  Do creatures drown in the flood? "true" = Yes   "false" = No   -->
		<TideDrown>true</TideDrown>
		
	</BiomeOcean.ConfigurationDef>
</Defs>