		<defName>Fit</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>fit</label>
				<description>NAME loves exercise, and HIS time spent conditioning HIS body has paid off.</description>
				<statOffsets>
					<MoveSpeed>0.3</MoveSpeed>
				</statOffsets>
				<skillGains>
					<li>
						<key>Melee</key>
						<value>4</value>
					</li>
				</skillGains>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Fat</li>
		</conflictingTraits>
	</TraitDef>
	
