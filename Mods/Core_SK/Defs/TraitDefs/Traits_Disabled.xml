<Defs>

	<TraitDef>
		<defName>Efficient</defName>
		<commonality>0.001</commonality>
		<degreeDatas>
			<li>
				<label>efficient worker</label>
				<description>NAME is a highly efficient worker, resulting in increased productivity.</description>
				<statOffsets>
					<WorkSpeedGlobal>0.40</WorkSpeedGlobal>
				</statOffsets>
			</li>
		</degreeDatas>
		<conflictingTraits>
			<li>Slacker</li>
			<li>Focused</li>
			<li>Forgetful</li>
			<li>Aptitude</li>
		</conflictingTraits>
	</TraitDef>

