<?xml version="1.0" encoding="utf-8" ?>
<ThoughtDefs>


	<ThoughtDef>
		<defName>AteRawFood</defName>
    		<durationDays>1</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>ate raw food</label>
				<description>I had to eat raw food. Can't we cook it, or at least synthesize some nutrient paste?</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<ThoughtDef>
		<defName>AteNutrientPasteMeal</defName>
    		<durationDays>1</durationDays>
		<stackLimit>3</stackLimit>
		<stages>
			<li>
				<label>ate nutrient paste</label>
				<description>I had to eat nutrient paste. I know it keeps you alive, but nobody wants to swallow that glop.</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
  
  
	<ThoughtDef>
		<defName>AteReplicatedMeal</defName>
    		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate replicated meal</label>
				<description>I ate a replicated meal. It wasn't fancy, but it was filling!</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
  
  
	<ThoughtDef>
		<defName>AteSimpleMeal</defName>
    		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate simple meal</label>
				<description>I ate a simple meal.  It wasn't fancy, but it was filling!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<ThoughtDef>
		<defName>AteFineMeal</defName>
    		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate fine meal</label>
				<description>I ate a really tasty fine meal. Yum!</description>
				<baseMoodEffect>7</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<ThoughtDef>
		<defName>AteLavishMeal</defName>
    		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate lavish meal</label>
				<description>That lavish meal was amazing. It nourished my body and my soul.</description>
				<baseMoodEffect>12</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


  <!-- =========== Cannibalism ===============-->
  <ThoughtDef>
    <defName>AteHumanlikeMeatDirect</defName>
    <durationDays>2</durationDays>
    <stackedEffectMultiplier>0.25</stackedEffectMultiplier>
    <stackLimit>3</stackLimit>
    <nullifyingTraits>
      <li>Cannibal</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>raw cannibalism</label>
        <description>I ate the meat of another human, raw, like an animal. This is a nightmare.</description>
        <baseMoodEffect>-25</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


