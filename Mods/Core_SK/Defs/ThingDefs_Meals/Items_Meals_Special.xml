<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SK_MealBase">
		<defName>MeatSoup</defName>
		<label>Meat Soup</label>
		<description>Boiling stuff allows to extract every bit of nutrition. Not the most delicious dish, but it saves ingredients.</description>
		<graphicData>
			<texPath>Things/Item/Meal/Mushrooms</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<DeteriorationRate>10</DeteriorationRate>
			<MarketValue>10</MarketValue>
			<WorkToMake>500</WorkToMake>
			<Bulk>1.5</Bulk>
			<Mass>1.2</Mass>	
			<Nutrition>0.8</Nutrition>	
		</statBases>
		<stackLimit>10</stackLimit>
		<ingestible>
			<preferability>MealSimple</preferability>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>7</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="SK_MealBase">
		<defName>HeartyStew</defName>
		<label>Hearty Stew</label>
		<description>Warming food that gives you sense of home.</description>
		<graphicData>
			<texPath>Things/Item/Meal/Mushrooms</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<DeteriorationRate>10</DeteriorationRate>
			<MarketValue>20</MarketValue>
			<WorkToMake>500</WorkToMake>
			<Bulk>1.5</Bulk>
			<Mass>1.2</Mass>	
			<Nutrition>0.85</Nutrition>	
		</statBases>
		<stackLimit>10</stackLimit>
		<ingestible>
			<tasteThought>AteFineMeal</tasteThought>
			<preferability>MealFine</preferability>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>HadHeartyStew</hediffDef>
					<severity>0.6</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>6</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>
	
	<ThingDef ParentName="SK_MealBase">
		<defName>MakiRolls</defName>
		<label>Maki Rolls</label>
		<description>A rice cylinder with seaweed. Itâ€™s usually stuffed with fish in the middle.</description>
		<graphicData>
			<texPath>Things/Item/Meal/makiRoll</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<DeteriorationRate>10</DeteriorationRate>
			<MarketValue>18</MarketValue>
			<WorkToMake>200</WorkToMake>
			<Bulk>1.0</Bulk>
			<Mass>0.7</Mass>
			<Nutrition>0.8</Nutrition>
		</statBases>
		<stackLimit>10</stackLimit>
		<ingestible>
			<foodType>Meal, Processed</foodType>
			<preferability>MealLavish</preferability>
			<ingestEffect>EatVegetarian</ingestEffect>
			<tasteThought>AteLavishMeal</tasteThought>
			<ingestSound>Meal_Eat</ingestSound>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>HadMakiRolls</hediffDef>
					<severity>0.6</severity>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Rottable">
				<daysToRotStart>5</daysToRotStart>
				<rotDestroys>true</rotDestroys>
			</li>
		</comps>
	</ThingDef>

</Defs>
